{
    "name": "Work_Sidebar",
    "version": "1.0",
    "description": "just a demo",

    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "manifest_version": 2,

    "permissions": ["<all_urls>", "tabs", "activeTab"],

    "browser_action": {
        "default_popup": "src/popup/popup.html",
        "default_title": "Work Sidebar",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }, 

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/run_at_every_page_loading.js"]
        }
    ],
    "web_accessible_resources": [
        "*"
    ]
}
