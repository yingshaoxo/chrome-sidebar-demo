{
    "name": "sidebar_demo",
    "version": "1.1",
    "description": "just a demo",

    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "manifest_version": 2,

    "permissions": ["<all_urls>", "tabs", "activeTab"],

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "No More Chinese",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }, 

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["do.js"]
        }
    ],
    "web_accessible_resources": [
        "do.css"
    ]
}
